{
  "url": "https://ghost-blog-2m1k.onrender.com",
  "server": {
    "port": 2368,
    "host": "0.0.0.0"
  },
  "database": {
    "client": "sqlite3",
    "connection": {
      "filename": "/var/lib/ghost/content/data/ghost.db"
    }
  },
  "mail": {
    "transport": "SMTP",
    "from": "${process.env.MAIL_USER}",
    "options": {
      "host": "${process.env.MAIL_HOST}",
      "port": 465,
      "secure": true,
      "auth": {
        "user": "${process.env.MAIL_USER}",
        "pass": "${process.env.MAIL_PASS}"
      }
    }
  },
  "logging": {
    "transports": [
      "file",
      "stdout"
    ]
  },
  "process": "production",
  "paths": {
    "contentPath": "/var/lib/ghost/content"
  }
}